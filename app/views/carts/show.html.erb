<div class = "container">
  <h2>Cart show</h2>
  <ul>
    <% @cart.order_products.each do |order_product| %>
      <li>Item: <%= order_product.product.name %>/ Price: <%= number_to_currency(order_product.product.price) %>/ Quantity: <%= order_product.quantity %>/ Total Price: <%= number_to_currency(order_product.total_price) %>
      <ul>
        <li>
          <%= link_to "Add one", order_product_add_path(:id => order_product), method: :post %>
          <%= link_to "Reduce one", order_product_reduce_path(:id => order_product), method: :post %>
        </li>
        <li>
          <%= link_to "Remove item", order_product_path(order_product), data: { turbo_method: "delete" } %>
        </li>
      </ul>
    <% end %>
  </ul>
  <h3>Sub total: <%= number_to_currency(@cart.sub_total) %></h3>
  <%= link_to "Proceed to checkout", new_order_path %><br>
  <%= link_to "Empty cart", cart_path(@current_cart), data: { turbo_method: "delete", turbo_confirm: "Are you sure?" } %>
</div>