<div class="container">
  <h1>Drivers Details</h1>
  <dl>
    <dt>ID</dt>
    <dd><%= @ddriver.id %></dd>
    <dt>First Name</dt>
    <dd><%= @ddriver.first_name %></dd>
    <dt>Last Name</dt>
