<div class= "container bg-white text-dark mx-auto">
  <div class = "border border-dark p-3 mb-3">
   <h2>Register new User</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :phone_number,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "phone-number" } %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :username,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "username" } %>
        <%= f.input :address,
                    input_html: {data: {address_autocomplete_target: "address"}, class: ""},
                    wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
        <%= f.input :additional_info,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "additional_info" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Register", class: "btn btn-outline-secondary my-1"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
