<div class="container">
  <div class="navbar">
    <% if signed_in? && current_user.admin == false %>
      <div>
      <%= link_to cart_path(@current_cart), class: "btn btn-outline-danger my-1" do %>
        <%= content_tag :i, "", class: "fas fa-shopping-cart" %>
      <% end %>
      <%= link_to "Go back", root_path, class: "btn btn-outline-secondary my-1" %>
      </div>
      <div class="nav-item dropdown">
        <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <h3><%= link_to "My Orders", my_orders_path, class: "dropdown-item mt-3" %>
          <%= link_to "Edit Details", edit_user_registration_path, class: "dropdown-item my-5" %>
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item mb-3" %></h3>
        </div>
      </div>
    <% elsif signed_in? && current_user.admin == true %>
      <div>
      <%= link_to "Take Away Order", take_away_path, class: "btn btn-outline-danger my-1" %>
      <%= link_to "Go back", root_path, class: "btn btn-outline-secondary my-1" %>
      <% if !@current_cart.order_products.empty? %>
        <%= link_to cart_path(@current_cart), class: "btn btn-outline-danger my-1" do %>
          <%= content_tag :i, "", class: "fas fa-shopping-cart" %>
        <% end %> 
      <% end %>
      </div>
      <div class="nav-item dropdown">
        <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <h3><%= link_to "My Orders", my_orders_path, class: "dropdown-item mt-3" %>
          <%= link_to "Edit Details", edit_user_registration_path, class: "dropdown-item my-5" %>
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item mb-3" %></h3>
        </div>
      </div>
    <% end %>
  </div>
</div>
